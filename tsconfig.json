{
  "compilerOptions": {
    "declaration": true,
    "declarationMap": true,
    "strict": true,
    "target": "ES2021",
    "esModuleInterop": true,
    "module": "ES2020",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "lib": ["DOM", "ES2022"],
    "skipLibCheck": true,
    "types": ["node"]
  },
  "include": ["./src"],
  "exclude": ["node_modules", "dist", "**/*.spec.ts", "**/*.test.ts"]
}
